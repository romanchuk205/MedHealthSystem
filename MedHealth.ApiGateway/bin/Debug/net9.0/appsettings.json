{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "appointments-route": {
        "ClusterId": "appointments-cluster",
        "Match": {
          "Path": "/api/patients/{**catch-all}"
        }
      },
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/doctors/{**catch-all}"
        }
      },
      "feedback-route": {
        "ClusterId": "feedback-cluster",
        "Match": {
          "Path": "/api/reviews/{**catch-all}"
        }
      },
      "aggregator-route": {
        "ClusterId": "aggregator-cluster",
        "Match": {
          "Path": "/api/aggregator/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "appointments-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://appointments-api"
          }
        }
      },
      "catalog-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://catalog-api"
          }
        }
      },
      "feedback-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://feedback-api"
          }
        }
      },
      "aggregator-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://aggregator"
          }
        }
      }
    }
  }
}